<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="base_txt">
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="txt_black_16" parent="base_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>
    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/txt_black</item> <!--  敲定颜色-->
        <item name="android:textSize">16sp</item> <!--  搞掂字体大小-->
        <item name="colorControlNormal">@color/txt_black</item>
    </style>

    <style name="toolbarTheme_white" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">16sp</item> <!--  搞掂字体大小-->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/txt_black</item>
    </style>
</resources>
